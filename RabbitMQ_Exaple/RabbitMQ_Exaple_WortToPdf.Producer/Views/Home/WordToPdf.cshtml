@model WordToPdfModel
@{
    ViewData["Title"] = "WordToPdf";
}

<h6>Word To Pdf</h6>
<hr />
@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}
<form asp-action="WordToPdf" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="File"></label>
                <input asp-for="File" class="form-control" />
            </div>
            <div class="form-group">
                <button class="btn btn-outline-info" type="submit">Gönder</button>
            </div>
        </div>
    </div>
</form>


